body
  font-family sans-serif
  line-height 1.4em

h1
  margin 30px 0

h2
  margin 30px 0 20px 0


section
  margin 20px 0


button
input[type='submit']
  appearance none
  background #e5e5e5
  border none
  margin 5px 0
  padding 7px 15px
  transition background .3s ease

button:hover
input[type='submit']:hover
  cursor pointer
  background #d9d9d9

  
.notification
  color blue
  background lightgrey
  font-size 20px
  border-style solid
  border-radius 5px
  padding 10px
  margin-bottom 10px

.notification.error
  color red

.notification.success
  color green


.blog-list
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 14px
  margin 30px 0
  padding 0

  .blog
    // width @css{calc(50% - 7px)}
    width 100%
    display flex
    flex-flow row nowrap
    justify-content start
    align-items stretch
    gap 15px 0

    .vote
      width 50px
      display flex
      flex-flow column wrap
      align-items center
      padding 10px 0

      button
        appearance none
        background-color transparent
        border none

      button:hover
        cursor pointer

    a.info
      position relative
      // width @css{calc(100% - 90px)}
      width 100%
      text-decoration none
      color inherit
      // background #e5e5e5
      background #d9d9d9
      padding 10px 20px
      transition background .3s ease

      > span
        display block
        padding 2px 0

        > b
          font-size 1.3em

      button.remove-blog
        background #000
        color #fff

      button.remove-blog:hover
        background #4b4b4b

      button.toggle-visibility
        position absolute
        top 10px
        right 20px
        margin 0

    a.info:hover
      // background #d9d9d9
      background #c2c2c2


form
  display flex
  flex-flow row wrap
  justify-content start
  align-items start
  gap 10px

  div
    width 100%

    label
      display inline-block
      width 84px


